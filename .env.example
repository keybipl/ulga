# Django Settings
# Set to psi.settings for universal configuration (works locally and on VPS)
DJANGO_SETTINGS_MODULE=psi.settings

# Required for production
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Optional: Enable SSL/HTTPS security (set to True if using HTTPS)
USE_SSL=False

# Database (opcjonalnie, jeśli chcesz użyć PostgreSQL zamiast SQLite)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=ulga_db
# DB_USER=ulga_user
# DB_PASSWORD=your-password
# DB_HOST=localhost
# DB_PORT=5432
